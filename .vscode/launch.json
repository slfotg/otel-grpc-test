{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Cli",
            "env": {
                "OTEL_SERVICE_NAME": "rss-client",
                "JAVA_TOOL_OPTIONS": "-javaagent:/home/vscode/opentelemetry-javaagent.jar"
            },
            "request": "launch",
            "mainClass": "io.github.slfotg.otel.Cli",
            "projectName": "otel-grpc-client"
        },
        {
            "type": "java",
            "name": "Run Server",
            "env": {
                "OTEL_SERVICE_NAME": "rss-service",
                "JAVA_TOOL_OPTIONS": "-javaagent:/home/vscode/opentelemetry-javaagent.jar"
            },
            "request": "launch",
            "mainClass": "io.github.slfotg.otel.Main",
            "projectName": "otel-grpc-service-container"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        }
    ]
}